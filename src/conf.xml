<logfile>skit.log</logfile> <!-- global parameters mandatory-->
<pidfile>skit.pid</pidfile>
<daemon>yes</daemon>
<io_threads>1</threads>
<max_threads>1</max_threads>

<!-- JSON managment API authentication -->
<admin>
	<user>some user</user>
	<password>some password</password>
</admin>

<servers>
    <server>
        <name>http</name> <!-- HTTP server is mandatory config directive -->
        <listen>8080</listen>
    </server>

    <server>
        <name>rtmp</name>
        <listen>1935</listen>
        <options>
            <publish>allow</publish>
            <chunkSize>4000</chunkSize>
        </options>
    </server>
</servers>
    
<streams>
    <stream>
        <name>bunny</name>
        <location>/media/emo/20A7503C234281D8/bbb_sunflower.mp4</location>
    </stream>

    <stream>
        <name>FoxLiveTV</name>
        <location>http://127.0.0.1:8099/</location>
        <live>yes</live>
        <source>DVBStreamHTTP</source>
	    <filter>MPEG2TsMP4H264</filter>
   </stream>

   <stream>
    <name>Movie</name>
	<location>/home/emo/Downloads/sample.mp4</location>
    <options>
	    <cashing>no</cashing>
	    <seekable>yes</seekable>
    </options>
   </stream>
</streams>


